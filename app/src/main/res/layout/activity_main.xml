<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.andranikh.barcampdemo.MainActivity">

    <LinearLayout
        android:id="@+id/main_buttons_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/main_xray_mode"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="20dp"
            android:background="@color/colorPrimary"
            android:foreground="@drawable/light_ripple">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="20dp"
                android:src="@drawable/xray"
                android:foreground="@color/colorAccentTr"
                android:background="@color/colorAccentTr"/>

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="25dp"
                android:src="@drawable/xray"
                android:foreground="@color/colorAccentTr"
                android:background="@color/colorAccentTr"/>

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20dp"
                android:src="@drawable/xray"
                android:foreground="@color/colorAccentTr"
                android:background="@color/colorAccentTr"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:layout_centerInParent="true"
                android:textSize="40sp"
                android:text="X Ray Mode"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="30dp"
                android:textSize="20sp"
                android:text="Tap to open"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/main_decor_mode"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:padding="20dp"
            android:background="@color/white"
            android:foreground="@drawable/dark_ripple"
            android:layout_weight="1">

            <com.mikhaellopez.circularimageview.CircularImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/img_1"
                app:civ_border_color="@color/white"
                android:layout_marginStart="20dp"
                app:civ_border_width="5dp"/>

            <com.mikhaellopez.circularimageview.CircularImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/img_5"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="25dp"
                app:civ_border_color="@color/white"
                app:civ_border_width="5dp"/>

            <com.mikhaellopez.circularimageview.CircularImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/img_7"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20dp"
                app:civ_border_color="@color/white"
                app:civ_border_width="5dp"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ff3366"
                android:layout_centerInParent="true"
                android:layout_marginTop="30dp"
                android:textSize="40sp"
                android:text="Decorated Mode"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ff3366"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="30dp"
                android:textSize="20sp"
                android:text="Tap to open"/>

        </RelativeLayout>



    </LinearLayout>

    <FrameLayout
        android:id="@+id/main_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</RelativeLayout>
